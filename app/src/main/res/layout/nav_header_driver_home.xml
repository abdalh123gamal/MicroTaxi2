<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_250sdp"
    android:background="@color/md_deep_orange_200"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/header_driver_iv_profile"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:civ_border_color="@color/ic_launcher_app_background"
            app:civ_border_width="1dp"
            app:civ_shadow="false"
            app:civ_shadow_color="@color/ic_launcher_app_background"
            app:civ_shadow_radius="10dp"
            app:srcCompat="@drawable/ic_driver_svg" />

    </LinearLayout>

    <TextView
        android:id="@+id/header_driver_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/elmessiri_medium"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="driver driver"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/header_driver_tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/elmessiri_medium"
        android:text="driver1234@gmail.com"

        android:textSize="18sp" />

    <RatingBar
        android:id="@+id/header_driver_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:numStars="5"
        android:isIndicator="true"
        android:rating=".1" />

</LinearLayout>
