<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_driver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SettingDriverInfo">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="#60070606"
        android:orientation="vertical">

        <TextView
            android:id="@+id/setting_driver_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/elmessiri_bold"
            android:gravity="center"
            android:text="الملف الشخصي للسائق"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/setting_driver_iv_driver"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_profile"
            app:civ_border_width="0dp"
            app:civ_shadow="false"
            app:civ_shadow_radius="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/setting_driver_ed_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:fontFamily="@font/elmessiri_medium"
                            android:hint="@string/register_driver_ed_hint_name"
                            android:textSize="14sp">

                        </com.google.android.material.textfield.TextInputEditText>


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/setting_driver_ed_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:fontFamily="@font/elmessiri_medium"
                            android:hint="@string/register_driver_ed_hint_email"
                            android:inputType="textEmailAddress"
                            android:textSize="14sp">

                        </com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/setting_driver_ed_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:fontFamily="@font/elmessiri_medium"
                            android:hint="@string/register_driver_ed_hint_phone"
                            android:inputType="phone"
                            android:textSize="14sp">

                        </com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"

                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/colorAccent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/setting_driver_ed_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:fontFamily="@font/elmessiri_medium"
                            android:hint="@string/register_driver_ed_hint_password"
                            android:inputType="textPassword"
                            android:textSize="14sp">

                        </com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/setting_driver_ed_car_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:fontFamily="@font/elmessiri_medium"
                            android:hint="@string/register_driver_ed_hint_car_type"
                            android:textSize="14sp">

                        </com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/bottom_sheet_background">

                    <Button
                        android:id="@+id/setting_driver_btn_edit"
                        android:layout_width="@dimen/_115sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/elmessiri_medium"
                        android:gravity="center"
                        android:text="تعديل البيانات"
                        android:textAllCaps="false"
                        app:backgroundTint="@android:color/holo_green_dark"
                        app:cornerRadius="@dimen/_15sdp"
                        app:strokeColor="#FF0000" />

                    <Button
                        android:id="@+id/setting_driver_btn_back"
                        android:layout_width="@dimen/_115sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/elmessiri_medium"
                        android:gravity="center"
                        android:text="الخروج"
                        app:backgroundTint="@color/design_default_color_error"
                        app:cornerRadius="@dimen/_15sdp" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>